{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSources": false,
    "isolatedModules": true,
    "target": "es5",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "allowJs": false,
    "strict": true
  },
  "exclude": ["./node_modules/**/*", "./dist/**/*"],
  "include": ["src"]
}
