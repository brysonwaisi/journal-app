{
  "name": "journal-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:migrate": "npm --workspace packages/database exec prisma migrate dev",
    "prisma:generate": "npx prisma generate --schema=packages/database/prisma/schema.prisma",
    "prisma:seed": " npm --workspace packages/database exec prisma db seed",
    "migrate:deploy": "npx prisma migrate deploy --schema=packages/database/prisma/schema.prisma",

    "build:api": "npx turbo run build --filter=./apps/api...",
    "start:api": "node apps/api/dist/main.js",

    "render:build": "npm ci && npm run prisma:generate && npm run build:api"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "zod": "^4.0.17"
  }
}